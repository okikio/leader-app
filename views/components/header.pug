mixin link (name) 
  - let toLink = function (val) { return val.replace(/\s/g, "-").replace(/\&/g, "and").toLowerCase(); }; 
  li(class=`navbar-link ${toLink(name) == toLink(tab_focus) ? 'navbar-link-focus' : ''}`)
    a(href=`/${toLink(name)}`)= name
  
header.header
  nav.navbar.navbar-fixed
    article.navbar-layout
      section.navbar-head
        a.navbar-title(href='/')
          span.navbar-title-txt Science
      section.navbar-main
        ul.navbar-list.navbar-list-hide
          each val in tabs
            +link(val)
      section.navbar-foot
        a.icon-btn.navbar-menu
          i.icon menu
